<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

    <div class="container">
        <div class="card">
            <div class="card">
                <div class="card-header">
                    <h1>Cadastrar pedido</h1>
                </div>
                <div class="card-body">
                    <form action="/pedidos/new" method="post">
                        <label>Número do pedido:</label>
                        <input type="text" name="npedido" placeholder="Insira o número do pedido" class="form-control"
                            required>
                        <label>Valor do pedido:</label>
                        <input type="text" name="valorpedido" placeholder="Insira o valor do pedido" class="form-control"
                            required>
                        <input type="submit" value="Cadastrar" class="btn btn-success mt-3">
                    </form>
                    <hr>
                </div>
            </div>
        </div>
            <div class="card-body">
                <table>
                    <thead>
                        <tr>
                            <th></th>
                            <th>Número:</th>
                            <th>Valor:</th>
                            <th colspan="2">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% pedidos.forEach(pedido => { %>
                        <tr>
                            <td><img src="imgs/order.png" width="30px"></td>
                            <td><%= pedido.numero %></td>
                            <td><%= pedido.valor.toLocaleString('pt-br', {style: 'currency', currency: 'BRL'}) %></td>
                            <td>
                                <a class="btn btn-warning" href="/pedidos/edit/<%= pedido.id %>">Editar</a> 
                            </td>
                            <td>
                               <a class="btn btn-danger" href="/pedidos/delete/<%= pedido.id %>" onclick="return confirm('Deseja mesmo exluir o pedido <%= pedido.numero %>')">Excluir</a> 
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<%- include ('partials/footer.ejs') %>
